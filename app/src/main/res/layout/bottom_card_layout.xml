<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/frtetrt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="4 avaliable"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <RatingBar
                    android:id="@+id/dishRating"
                    style="@style/ratingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:isIndicator="true"
                    android:rating="1"
                    android:stepSize="1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_dishSummry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frtetrt"
                android:padding="@dimen/dp_10"
                android:text="Grilling ijriojoer nrwioejroenrio rnwioerjiwekrn krnweirjweknrjkhriowjerk wnorwjeorjwerjwekr wnbruiwejrkw rjkwnruinwrjkenjwrenjkrejwneirwke rkwnerjihwjkernjkwehriwenrjkhuiwrjheioewnrjknweuirhweirohweuirwerhwuiernwe rjkwrui jkr uirwir worhwiorbw rwneriow"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dishSummry"
                android:orientation="horizontal"
                android:id="@+id/dish_category"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/txt_category"
                        android:padding="6dp"
                        android:gravity="center"
                        android:textSize="@dimen/dp_12"
                        android:background="@drawable/goods_background"
                        android:text="Not define"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/txt_nature"
                        android:padding="6dp"
                        android:gravity="center"
                        android:textSize="@dimen/dp_12"
                        android:background="@drawable/goods_background"
                        android:text="Not define"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/frerett"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/dish_category"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/black_grey_tint" />

            <TextView
                android:id="@+id/tv_vendrName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frerett"
                android:padding="@dimen/dp_10"
                android:text="Vender Name\nFernandano de Sauzo"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>