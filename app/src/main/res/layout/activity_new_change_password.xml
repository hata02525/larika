<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <ImageView
            android:padding="@dimen/dp_10"
            android:id="@+id/iv_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/back_white" />

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_cross">

            <TextView
                android:id="@+id/ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/dp_10"
                android:text="Change password"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_container"
            android:background="@color/white">



            <EditText
                android:id="@+id/et_Lpasswrd"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@null"
                android:hint="Last password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:padding="@dimen/dp_10"
                android:textColor="@color/black"
                android:textColorHint="@color/black_grey_tint"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/gfsrwert"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_Lpasswrd"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/black_grey_tint" />.
            <EditText
                android:id="@+id/et_Npasswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gfsrwert"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:hint="New password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:padding="@dimen/dp_10"
                android:textColor="@color/black"
                android:textColorHint="@color/black_grey_tint"
                android:textSize="@dimen/sp_16" />
            <View
                android:id="@+id/gfsrwgdtrert"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_Npasswrd"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/black_grey_tint" />.
            <EditText
                android:id="@+id/et_Rpasswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gfsrwgdtrert"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:hint="Repeat the password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:padding="@dimen/dp_10"
                android:textColor="@color/black"
                android:textColorHint="@color/black_grey_tint"
                android:textSize="@dimen/sp_16" />
            <View
                android:id="@+id/gfsrrert"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/et_Rpasswrd"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/black_grey_tint" />.
            <TextView
                android:id="@+id/tv_saveChnages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gfsrrert"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_80"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

    </RelativeLayout>

</layout>