<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/rl_dialog"
        android:layout_width="match_parent"
        android:background="@drawable/ractangleshape"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_18"/>
        <View
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_height="@dimen/dp_1"
            android:background="#000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/sp_12"
            android:layout_marginEnd="@dimen/sp_12"
            android:background="@drawable/ractangleshape"
            android:layout_marginTop="@dimen/dp_26">
            <EditText
                android:id="@+id/edit_emailid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="enter emailid"
                android:background="@drawable/rectangleedit_text"
                android:gravity="center"
                android:maxLength="35"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black_grey_tint"
                android:textCursorDrawable="@drawable/text_cursr_blink"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="100sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:id="@+id/forgot_button"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:background="@drawable/firgotrectangle"
            >
            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="2sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send"
                android:textSize="@dimen/sp_16"
                android:textColor="#fff"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
