<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_white"
    tools:context="com.example.fluper.larika_user_app.fragment.ContactUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
    android:id="@+id/layoutcontactus">

    <TextView
        android:id="@+id/fsdfdfs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="Subject"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/fretert"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/fsdfdfs"
        android:background="@color/black_grey_tint" />

    <EditText

        android:id="@+id/et_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fretert"
        android:background="@color/white"
        android:hint="About what you wanna talk about ?"
        android:textColorHint="@color/black_grey_tint"
        android:imeOptions="actionNext"
        android:padding="@dimen/dp_15"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <View
        android:id="@+id/rtytryy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/et_subject"
        android:background="@color/black_grey_tint" />

    <TextView
        android:id="@+id/tyyy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rtytryy"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        android:text="Message"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/erreye"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tyyy"
        android:background="@color/black_grey_tint" />

    <EditText
        android:id="@+id/et_messgaBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@+id/erreye"
        android:background="@color/white"
        android:gravity="start"
        android:hint="Write your message here"
        android:textColorHint="@color/black_grey_tint"
        android:imeOptions="actionNext"
        android:maxHeight="@dimen/dp_250"
        android:maxLength="200"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <View
        android:id="@+id/yrty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/et_messgaBox"
        android:background="@color/black_grey_tint" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layo"
        android:layout_alignParentBottom="true"
        >
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@color/black"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_below="@+id/et_messgaBox"
            android:layout_alignParentBottom="true"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


</RelativeLayout>

    </ScrollView>

</RelativeLayout>
