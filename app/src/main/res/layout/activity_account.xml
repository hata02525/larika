<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.example.fluper.larika_user_app.activity.AccountActivity">

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/cross_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cross"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:text="Account"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_container"
            android:background="@color/dull_white"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/fwtetert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.fluper.larika_user_app.utils.CircleImageView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/user" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fwtetert"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_10"
                    android:text="User Name"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/tv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="edit account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_edit"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@color/white">

                    <View
                        android:id="@+id/gfdgfdg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:background="@color/black_grey_tint" />

                    <TextView
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/tv_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gfdgfdg"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableLeft="@mipmap/contact"
                        android:drawablePadding="@dimen/dp_20"
                        android:drawableRight="@mipmap/right_arrow"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/fdgfg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:layout_below="@+id/tv_contact"
                        android:background="@color/black_grey_tint" />

                    <TextView
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/tv_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fdgfg"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableLeft="@mipmap/about"
                        android:drawablePadding="@dimen/dp_20"
                        android:drawableRight="@mipmap/right_arrow"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="About Larika"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/fdgfretreg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:layout_below="@+id/tv_about"
                        android:background="@color/black_grey_tint" />

                    <TextView
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/tv_sugest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fdgfretreg"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableLeft="@mipmap/meal"
                        android:drawablePadding="@dimen/dp_20"
                        android:drawableRight="@mipmap/right_arrow"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="Suggest a Meal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/fdgfrreg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:layout_below="@+id/tv_sugest"
                        android:background="@color/black_grey_tint" />

                    <TextView
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/tv_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fdgfrreg"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableLeft="@mipmap/setting"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableRight="@mipmap/right_arrow"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="Settings"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/koyy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:layout_below="@+id/tv_setting"
                        android:background="@color/black_grey_tint" />

                    <TextView
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/tv_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/koyy"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableLeft="@mipmap/logout"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableRight="@mipmap/right_arrow"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/kofsdreyy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:layout_below="@+id/tv_logout"
                        android:layout_marginBottom="60dp"
                        android:background="@color/black_grey_tint" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</layout>
