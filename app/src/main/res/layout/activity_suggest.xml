<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.fluper.larika_user_app.activity.SuggestActivity">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_back"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="Suggest Meals"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutsuggest"
            android:background="@color/dull_white">

            <EditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fretert"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="Grilling is going to the dogs. According to the Hearth,Patio &amp; Barbecue"
                android:imeOptions="actionNext"
                android:textStyle="normal"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/tyyy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_subject"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_15"
                android:text="What is it?"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_whtitIs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/tyyy"
                android:background="@drawable/rect_black_shape"
                android:gravity="top"
                android:hint="Write your message here"
                android:imeOptions="actionNext"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_grey_tint"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/teyrty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_whtitIs"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_15"
                android:text="Where find it?"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_wfindIt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/teyrty"
                android:background="@drawable/rect_black_shape"
                android:gravity="top"
                android:hint="Write your message here"
                android:imeOptions="actionNext"
                android:padding="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black_grey_tint"
                android:textSize="@dimen/sp_15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_wfindIt"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_saveChnages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="@color/black"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_10"
                    android:text="Save changes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
